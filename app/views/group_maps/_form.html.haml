= form_for @group_map do |f|
  -if @group_map.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group_map.errors.count, "error")} prohibited this group_map from being saved:"
      %ul
        - @group_map.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
